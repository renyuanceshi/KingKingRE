<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/horizontal_margin"
    android:background="@drawable/userprofile_round_corner_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="10.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <com.pccw.android.common.widget.TypefacedTextView
                    android:id="@id/addcall_contact_detail_item_phone_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_detail_type_mobile"
                    android:textAllCaps="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/corp_blue"
                    font:typeface="RobotoCondensed-Bold.ttf" />

                <com.pccw.android.common.widget.TypefacedTextView
                    android:id="@id/addcall_contact_detail_item_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/corp_blue"
                    font:typeface="Roboto-Regular.ttf" />
            </LinearLayout>

            <ImageView
                android:id="@id/addcall_contact_photo"
                android:layout_width="@dimen/contact_button_icon_size"
                android:layout_height="@dimen/contact_button_icon_size"
                android:layout_weight="0.0"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_contact_messaging_button" />

            <ImageView
                android:id="@id/addcall_sms_imgbtn"
                android:layout_width="@dimen/contact_button_icon_size"
                android:layout_height="@dimen/contact_button_icon_size"
                android:layout_weight="0.0"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_contact_sms_inter_button"
                android:visibility="gone" />

            <ImageView
                android:id="@id/addcall_call_imgbtn"
                android:layout_width="@dimen/contact_button_icon_size"
                android:layout_height="@dimen/contact_button_icon_size"
                android:layout_weight="0.0"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_contact_call_with_native_button" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@id/addcall_contact_detail_im_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:orientation="vertical">

        <com.pccw.android.common.widget.TypefacedTextView
            android:id="@id/addcall_contact_detail_item_im_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/contact_detail_default_status"
            android:textColor="@color/shade_orange"
            android:textSize="16.0sp"
            font:typeface="Roboto-Regular.ttf" />

        <com.pccw.android.common.widget.TypefacedTextView
            android:id="@id/addcall_contact_detail_item_im_last_online_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4.0dip"
            android:text="@string/contact_detail_last_online"
            android:textColor="@color/bg_black"
            android:textSize="10.0sp"
            font:typeface="Roboto-Regular.ttf" />
    </LinearLayout>
</LinearLayout>