<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@id/menu_general_category"
        style="@style/CustomDialogTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="10.0dip"
        android:text="@string/auto_login_dialog_title_description"
        android:textSize="14.0sp" />

    <RelativeLayout
        android:id="@id/add_ssid_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@id/contactName"
                style="@style/CustomDialogTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="@string/auto_login_dialog_current_ssid"
                android:textSize="18.0sp"
                android:textStyle="bold" />

            <com.pccw.android.common.widget.TypefacedTextView
                android:id="@id/current_ssid"
                style="@style/CustomDialogTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="Not connected"
                android:textSize="16.0sp"
                android:fontFamily="robotoCondensed_regular.ttf" />
        </LinearLayout>

        <ImageButton
            android:id="@id/add_ssid_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu_add" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="4.0dip"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@id/current_version"
        style="@style/CustomDialogTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:text="@string/auto_login_dialog_subtitle"
        android:textSize="18.0sp"
        android:textStyle="bold" />

    <ListView
        android:id="@id/auto_login_ssid_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="2.0dip"
        android:background="@null" />
</LinearLayout>