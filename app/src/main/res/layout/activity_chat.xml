<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:id="@id/layoutParent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/chat_top_dark_blue"
    android:orientation="vertical"
    android:paddingTop="@dimen/actionbar_padding_top_height">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/gradient_chat_top_bar"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <com.pccw.android.common.widget.CircularImageView
            android:id="@id/im_user_profile"
            android:layout_width="@dimen/profile_head_chat_view"
            android:layout_height="@dimen/profile_head_chat_view"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="8.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/default_profile_pic" />

        <RelativeLayout
            android:id="@id/im_user_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <com.pccw.android.common.widget.TypefacedTextView
                android:id="@id/im_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:fontFamily="roboto_regular.ttf"
                android:singleLine="true"
                android:text="@string/chat_detail_username"
                android:textColor="@color/bg_white"
                android:textSize="18.0sp" />

            <ImageView
                android:id="@id/sms_type_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@id/im_user_name"
                android:scaleType="fitCenter"
                android:src="@drawable/sms_inter"
                android:visibility="gone" />
        </RelativeLayout>

        <com.pccw.android.common.widget.RelativeButtonLayout
            android:id="@id/btn_voice_call"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.0"
            android:descendantFocusability="blocksDescendants"
            android:paddingLeft="@dimen/horizontal_margin"
            android:paddingRight="@dimen/horizontal_margin">

            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/keypad_button_call_selector" />
        </com.pccw.android.common.widget.RelativeButtonLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <ListView
            android:id="@id/listview_msg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:background="@color/bg_grey"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:dividerHeight="0.0dip"
            android:fadingEdge="none"
            android:listSelector="@drawable/selector_list_item_transparent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" />

        <RelativeLayout
            android:id="@id/footer_system_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:clickable="false"
            android:descendantFocusability="afterDescendants"
            android:paddingBottom="5.0dip"
            android:visibility="gone">

            <com.pccw.android.common.widget.TypefacedTextView
                android:id="@id/msg_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/background_system_message"
                android:padding="12.0dip"
                android:text="@string/chat_group_toast_you_are_not_in_group"
                android:textColor="@color/corp_blue"
                android:textSize="12.0sp"
                android:fontFamily="roboto_regular.ttf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/footer_record_audio_notice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:clickable="false"
            android:descendantFocusability="afterDescendants"
            android:paddingBottom="5.0dip"
            android:visibility="gone">

            <com.pccw.android.common.widget.TypefacedTextView
                android:id="@id/msg_record_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/msg_record_audio_time"
                android:background="@drawable/background_system_message"
                android:padding="12.0dip"
                android:text="@string/chat_group_msg_recording_audio"
                android:textColor="@color/corp_blue"
                android:textSize="14.0sp"
                android:fontFamily="roboto_regular.ttf" />

            <com.pccw.android.common.widget.TypefacedTextView
                android:id="@id/msg_record_audio_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/incall_button_background_pressed"
                android:fontFamily="robotocondensed_bold.ttf"
                android:gravity="center"
                android:padding="12.0dip"
                android:text="00:00"
                android:textColor="@color/bg_white"
                android:textSize="12.0sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@id/topUnreadNotice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4.0dip"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="fill_parent"
                android:layout_height="4.0dip"
                android:background="@color/bg_semi_lightblue" />

            <com.pccw.android.common.widget.TypefacedTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_light_blue"
                android:gravity="center"
                android:paddingTop="8.0dip"
                android:paddingBottom="10.0dip"
                android:text="@string/chat_you_have_unread_messages"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/chat_load_more_button_color"
                android:fontFamily="robotoCondensed_regular.ttf" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="4.0dip"
                android:background="@color/bg_semi_lightblue" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/dark_blue" />

    <include
        layout="@layout/send_sms_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@id/layout_emoji"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/keyboard_height"
        android:background="@color/chat_emoji_keyboard_background"
        android:orientation="vertical"
        android:visibility="gone" />
</LinearLayout>