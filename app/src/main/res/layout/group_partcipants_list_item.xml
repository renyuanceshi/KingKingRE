<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/selector_listview_item"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="4.0dip"
        android:layout_marginRight="4.0dip"
        android:background="@android:color/transparent"
        android:padding="4.0dip">

        <com.pccw.android.common.widget.CircularImageView
            android:id="@id/participant_thumbnail"
            android:layout_width="56.0dip"
            android:layout_height="56.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/default_profile_pic"
             />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.0dip"
            android:layout_toRightOf="@id/participant_thumbnail"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.pccw.android.common.widget.TypefacedTextView
                android:id="@id/participant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:fontFamily="roboto_regular.ttf"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/corp_blue"
                android:textSize="20.0sp" />

            <TextView
                android:id="@id/admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_group_profile_admin"
                android:textAppearance="?android:textAppearanceSmall"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>