<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="-6.0dip"
    android:gravity="center_vertical"
    android:paddingBottom="16.0dip">

    <LinearLayout
        android:id="@id/detail_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <com.pccw.android.common.widget.TypefacedTextView
            android:id="@id/dialpadBannerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="top"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:singleLine="false"
            android:text="@string/banner_text"
            android:textColor="@color/bg_white"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@id/PreCallQILayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:visibility="invisible">

            <com.pccw.android.common.widget.TypefacedTextView
                android:id="@id/preCallQIStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pre_call_qi_status_title"
                android:textColor="@color/bg_white"
                android:fontFamily="roboto_regular.ttf" />

            <com.pccw.android.common.widget.TypefacedTextView
                android:id="@id/PreCallQIStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.0dip"
                android:textColor="@color/bg_white"
                android:fontFamily="robotoCondensed_light.ttf" />
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@id/dialpadBannerOnOffButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12.0dip"
        android:layout_weight="0.0"
        android:background="@null"
        android:button="@null"
        android:drawableRight="@drawable/roamsave_button" />
</LinearLayout>