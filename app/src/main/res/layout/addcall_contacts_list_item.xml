<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="4.0dip"
        android:layout_marginRight="4.0dip"
        android:background="@drawable/selector_listview_item"
        android:padding="4.0dip">

        <com.pccw.android.common.widget.CircularImageView
            android:id="@id/addcall_contact_thumbnail"
            android:layout_width="@dimen/list_item_profile_head_size"
            android:layout_height="@dimen/list_item_profile_head_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/default_profile_pic" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.0dip"
            android:layout_toRightOf="@id/addcall_contact_thumbnail"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.pccw.android.common.widget.TypefacedTextView
                android:id="@id/addcall_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/corp_blue"
                android:textSize="18.0sp"
                android:fontFamily="roboto_bold.ttf" />

            <ImageView
                android:id="@id/addcall_IMUserLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.0"
                android:src="@drawable/logo"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>